{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch patchman-unity with args",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/net10.0/patchman-unity.exe",
            "args": [
                "automation",
                ".\\ops.json",
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "preLaunchTask": "build"
        }
    ]
}